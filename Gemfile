source 'http://rubygems.org'

gem 'rails', '3.2.13'
gem 'jquery-rails'
gem 'haml'
gem 'heroku'
gem 'thin'
gem 'mysql2'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
  gem "therubyracer"
  gem "less-rails" 
  gem 'twitter-bootstrap-rails'
end

group :test do
  gem "rspec-rails", "~> 2.4"
  gem 'factory_girl_rails'
  gem "shoulda-matchers"
end

group :heroku do
  gem 'pg'
end



