!!!
%html
  %head
    %title Starbox
    = favicon_link_tag
    = stylesheet_link_tag 'application.css', :media => 'screen, projection'
    /[if lt IE 8]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    = csrf_meta_tag
    = javascript_include_tag 'application'
  %body
    .container
      .masthead
        %ul.nav.nav-pills.pull-right
          %li
            = link_to('Vend Beverages', root_url)
          %li
            = link_to('Admin', root_url)
          %li
            = link_to('Help', root_url)
        %h3.muted StarBox
      %hr
